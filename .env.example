# DPDA Simulator API Configuration
# Copy this file to .env and adjust values as needed

# ============================================================================
# STORAGE CONFIGURATION
# ============================================================================

# Storage backend type: 'memory' or 'database'
# - memory: Fast, non-persistent (data lost on restart)
# - database: Persistent SQLite storage (survives restarts)
STORAGE_BACKEND=memory

# Database connection URL (only used when STORAGE_BACKEND=database)
# Format: sqlite:///path/to/database.db
# Use relative path: sqlite:///./dpda_sessions.db
# Use absolute path: sqlite:////absolute/path/dpda_sessions.db
# Use in-memory: sqlite:///:memory: (testing only, not persistent)
DATABASE_URL=sqlite:///./dpda_sessions.db

# ============================================================================
# API SERVER CONFIGURATION
# ============================================================================

# API host and port (for uvicorn)
API_HOST=0.0.0.0
API_PORT=8000

# Enable auto-reload on code changes (development only)
API_RELOAD=true

# Log level: debug, info, warning, error, critical
LOG_LEVEL=info

# ============================================================================
# CORS CONFIGURATION
# ============================================================================

# Allowed origins for CORS (comma-separated)
# Use '*' to allow all origins (development only)
# Production example: https://myapp.com,https://www.myapp.com
CORS_ORIGINS=*

# ============================================================================
# SESSION CONFIGURATION
# ============================================================================

# Maximum session age in seconds (optional, for future use)
# SESSION_MAX_AGE=86400  # 24 hours

# Session cleanup interval in seconds (optional, for future use)
# SESSION_CLEANUP_INTERVAL=3600  # 1 hour

# ============================================================================
# PERFORMANCE CONFIGURATION
# ============================================================================

# Database connection pool size (for future optimization)
# DB_POOL_SIZE=5
# DB_MAX_OVERFLOW=10

# Enable query result caching (for future optimization)
# ENABLE_CACHING=false

# ============================================================================
# SECURITY CONFIGURATION (for future use)
# ============================================================================

# Rate limiting (requests per minute per session)
# RATE_LIMIT=100

# Maximum input string length for DPDA computation
# MAX_INPUT_LENGTH=10000

# Maximum computation steps
# MAX_COMPUTATION_STEPS=10000
